{
  "production" : true,
  "dist": {
    "html":    "dist",
    "css":     "dist/css",
    "js":      "dist/js",
    "fonts":   "dist/fonts/",
    "img":     "dist/img"
  },
  "src": {
    "jade":    "src/jade/templates/",
    "less":    "src/less/",
    "js":      "src/js/",
    "fonts":   "src/fonts/",
    "img":     "src/img/",
    "js_libs": "src/js_libs"
  },
  "watch": {
    "jade":    "src/jade/**/*.pug",
    "less":    "src/less/**/*.less",
    "js":      "src/js/**/*.js",
    "fonts":   "src/fonts/**/*.*",
    "img":     "src/img//**/*.*"
  },
  "bower" : "./src/bower_components",
  "bowerfile" : "./bower.json"
}
